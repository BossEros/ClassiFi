# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Application Configuration
APP_NAME=ClassiFi API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
API_PREFIX=/api
PORT=8001

# Judge0 Configuration (Code Execution)
JUDGE0_URL=http://localhost:2358

# Test Execution Configuration
# Maximum time (in seconds) allowed for test execution before timeout
# Default: 60 seconds
TEST_EXECUTION_TIMEOUT_SECONDS=60

# Email Configuration
# BOTH SendGrid and SMTP are REQUIRED for reliable email delivery
# SendGrid is used as primary, SMTP as automatic fallback

# SendGrid (Primary email service)
SENDGRID_API_KEY=your_sendgrid_api_key

# SMTP (Backup/Fallback email service - e.g., Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PASSWORD=your_app_password
SMTP_PORT=587
SMTP_USER=your_email@gmail.com

# Email sender details (used by both SendGrid and SMTP)
EMAIL_FROM=noreply@classifi.app
EMAIL_FROM_NAME=ClassiFi
